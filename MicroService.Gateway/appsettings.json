{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    
    "ReverseProxy": {
        "Routes": {
            "route1": {
                "ClusterId": "productCluster",
                "Match": {
                    "Path": "/products/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/products"
                    }
                ],
                "AuthorizationPolicy": "ProxyAuth"
            },
            "route2": {
                "ClusterId": "authCluster",
                "Match": {
                    "Path": "/auth/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/auth"
                    }
                ]
            },
            "route3": {
                "ClusterId": "cartCluster",
                "Match": {
                    "Path": "/carts/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/carts"
                    }
                ],
                "AuthorizationPolicy": "ProxyAuth"
            }
        },
        "Clusters": {
            "productCluster": {
                "Destinations": {
                    "productDestination": {
                        "Address": "https://localhost:7210"
                    }
                }
            },
            "authCluster": {
                "Destinations": {
                    "authDestination": {
                        "Address": "https://localhost:7049"
                    }
                }
            },
            "cartCluster": {
                "Destinations": {
                    "cartDestination": {
                        "Address": "https://localhost:7053"
                    }
                }
            }
        }
    }
}